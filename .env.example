# =============================================================================
# SLACK SUMMARY SCRIBE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# URL where your React frontend is running
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# BACKEND CONFIGURATION
# -----------------------------------------------------------------------------
# Port for the Express server
PORT=4000
# Environment: development, production, or test
NODE_ENV=development

# -----------------------------------------------------------------------------
# SUPABASE DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from your Supabase project settings
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Next.js public environment variables (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# -----------------------------------------------------------------------------
# PRISMA DATABASE CONFIGURATION (Alternative to Supabase)
# -----------------------------------------------------------------------------
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/slack_summary_scribe"

# -----------------------------------------------------------------------------
# SLACK OAUTH INTEGRATION CONFIGURATION
# -----------------------------------------------------------------------------
# Create a Slack app at https://api.slack.com/apps
# Enable OAuth & Permissions and set redirect URL to: http://localhost:3000/api/auth/slack/callback
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_STATE_SECRET=your_random_state_secret_here
SLACK_REDIRECT_URI=http://localhost:3000/api/auth/slack/callback

# Legacy Slack configuration (if needed)
VITE_SLACK_CLIENT_ID=your_slack_client_id
VITE_SLACK_CLIENT_SECRET=your_slack_client_secret
VITE_SLACK_SIGNING_SECRET=your_slack_signing_secret
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# -----------------------------------------------------------------------------
# AI SUMMARIZATION CONFIGURATION
# -----------------------------------------------------------------------------
# OpenRouter API for AI-powered summaries (Primary AI service with DeepSeek R1 + GPT-4o-mini fallback)
OPENROUTER_API_KEY=your_openrouter_api_key
# Legacy DeepSeek API (deprecated - use OpenRouter instead)
DEEPSEEK_API_KEY=your_deepseek_api_key


# -----------------------------------------------------------------------------
# AUTHENTICATION (OPTIONAL)
# -----------------------------------------------------------------------------
# Clerk for user authentication (if implementing user accounts)
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# -----------------------------------------------------------------------------
# PAYMENT PROCESSING (OPTIONAL)
# -----------------------------------------------------------------------------
# Stripe for subscription billing (if implementing paid features)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# -----------------------------------------------------------------------------
# CASHFREE PAYMENT GATEWAY CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from your Cashfree dashboard
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET_KEY=your_cashfree_secret_key
CASHFREE_ENVIRONMENT=sandbox # or production

# -----------------------------------------------------------------------------
# EMAIL SERVICE CONFIGURATION (RESEND)
# -----------------------------------------------------------------------------
# Get API key from https://resend.com
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION
# -----------------------------------------------------------------------------
# NextAuth configuration
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Generate strong random strings for these
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_32_characters

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Vercel deployment tokens (for GitHub Actions)
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Production URLs
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# -----------------------------------------------------------------------------
# OPTIONAL INTEGRATIONS
# -----------------------------------------------------------------------------
# Notion integration (optional)
NOTION_API_TOKEN=your_notion_api_token
NOTION_DATABASE_ID=your_notion_database_id

# Monitoring & Error Tracking (optional)
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project