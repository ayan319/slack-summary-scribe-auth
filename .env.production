# Production Environment Variables for Slack Summary Scribe

# App Configuration
NEXT_PUBLIC_APP_URL=https://slack-summary-scribe.vercel.app
NEXT_PUBLIC_SITE_URL=https://slack-summary-scribe.vercel.app
NODE_ENV=production

# Build optimizations
NEXT_TELEMETRY_DISABLED=1
SKIP_ENV_VALIDATION=false

# Ensure no React Email components are loaded
DISABLE_REACT_EMAIL=true

# Production-specific overrides only
# All actual secrets come from .env.local

# Production URLs override
NEXTAUTH_URL=https://slack-summary-scribe.vercel.app

# Feature Flags for production
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Production optimizations
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
