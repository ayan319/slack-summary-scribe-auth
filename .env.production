# Production Environment Variables for Slack Summary Scribe

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production

# Cashfree Payment Gateway (Production)
CASHFREE_CLIENT_ID=your_cashfree_production_client_id
CASHFREE_CLIENT_SECRET=your_cashfree_production_client_secret
CASHFREE_WEBHOOK_SECRET=your_cashfree_webhook_secret

# Slack OAuth (Production)
SLACK_CLIENT_ID=your_slack_production_client_id
SLACK_CLIENT_SECRET=your_slack_production_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Database (Choose one)
# PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Or Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Or MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# AI Service (DeepSeek)
DEEPSEEK_API_KEY=your_deepseek_api_key

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=Slack Summary Scribe <noreply@your-domain.com>
EMAIL_REPLY_TO=support@your-domain.com

# Analytics (Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key_32_chars_min
NEXTAUTH_URL=https://your-domain.com

# JWT Secret for API authentication
JWT_SECRET=your_jwt_secret_key_32_chars_minimum

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Third-party Integrations
# Notion (for exports)
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret

# Sentry (Error Monitoring)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Redis (for caching and sessions)
REDIS_URL=redis://username:password@host:port

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Webhook URLs (for external services)
WEBHOOK_BASE_URL=https://your-domain.com/api

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Monitoring
HEALTH_CHECK_TOKEN=your_health_check_token

# CORS Settings
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Session Configuration
SESSION_TIMEOUT=86400000
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
