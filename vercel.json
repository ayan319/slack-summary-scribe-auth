{
  "version": 2,
  "name": "slack-summary-scribe",
  "alias": ["your-domain.com", "www.your-domain.com"],
  "regions": ["iad1", "sfo1"],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "outputDirectory": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/slack/webhook",
      "dest": "/api/slack/webhook",
      "methods": ["POST"],
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/api/billing/webhook",
      "dest": "/api/billing/webhook",
      "methods": ["POST"],
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/api/cashfree/webhook",
      "dest": "/api/cashfree/webhook",
      "methods": ["POST"],
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://js.stripe.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co https://openrouter.ai https://api.openai.com https://api.deepseek.com https://api.stripe.com; frame-src https://js.stripe.com;"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/app",
      "destination": "/dashboard",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots"
    }
  ],
  "functions": {
    "app/api/slack/webhook/route.ts": {
      "maxDuration": 30
    },
    "app/api/summarize/route.ts": {
      "maxDuration": 60
    },
    "app/api/export/pdf/route.ts": {
      "maxDuration": 45
    },
    "app/api/billing/webhook/route.ts": {
      "maxDuration": 30
    },
    "app/api/cashfree/webhook/route.ts": {
      "maxDuration": 30
    },
    "app/api/cashfree/order/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "github": {
    "enabled": true,
    "autoAlias": true
  }
}
